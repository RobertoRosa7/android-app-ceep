<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ImageView
    android:id="@+id/create_note_icon_save"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="20dp"
    android:background="@drawable/ic_action_create_note"
    android:contentDescription="@string/save_note"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <EditText
    android:id="@+id/create_note_input_title"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:inputType="text"
    android:layout_margin="20dp"
    android:background="@android:color/transparent"
    android:hint="@string/create_note_input_title_hint"
    android:textSize="30sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/create_note_icon_save" />

  <EditText
    android:id="@+id/create_note_input_description"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@android:color/transparent"
    android:gravity="top"
    android:hint="@string/create_note_input_description_hint"
    android:inputType="text"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="@id/create_note_input_title"
    app:layout_constraintStart_toStartOf="@id/create_note_input_title"
    app:layout_constraintTop_toBottomOf="@id/create_note_input_title" />

</androidx.constraintlayout.widget.ConstraintLayout>